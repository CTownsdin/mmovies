<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">
                Meaningful Movies
            </p>
            <div class="list-group">
                <li class="list-group-item active">info 1</li>
                <li class="list-group-item">info 2</li>
                <li class="list-group-item">info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= movie.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">$9.00/night</h4>
                    <h4><a><%= movie.title %></a> TODO: link to IMDB HERE for Trailer</h4>
                    <p>Description: <%= movie.description %></p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/movies/<%= movie._id %>/comments/new">Add your comment</a>
                    <hr />
                </div>
                ~Comments Section~
                <% movie.comments.forEach((comment) => { %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.commenter %></strong>
                            <span class="pull-right">XXXX days ago</span>
                            <p>
                                "<%= comment.text %>"
                            </p>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>
