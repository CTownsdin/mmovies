<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a New Movie</h1>
        <div style="width: 40%; margin: 25px auto">
            <form method="POST" action="/movies">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="title" name="title"/>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="image url" name="image" />
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="movie description" name="description" />
                </div>
                <div class="form-group">
                    <button class="btn btn-lrg btn-primary btn-block">Submit</button>
                </div>
                <!--submitting a form uses the form method & action, itc: POST /movies-->
            </form>
        </div>
    </div>
</div>
