<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit comment</h1>
        <div style="width: 40%; margin: 25px auto">
            <form method="POST"
            action="/movies/<%=movie_id%>/comments/<%=comment.id%>?_method=PUT">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="<%= comment.text%>" name="comment[text]"/>
                </div>
                <!-- name="comment[whatever]" creates nice req.body.comment prop! -->
                <div class="form-group">
                    <button class="btn btn-lrg btn-primary btn-block">Submit Comment Edit</button>
                </div>
                <!--submitting a form uses the form method & action, itc: POST /movies-->
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>
