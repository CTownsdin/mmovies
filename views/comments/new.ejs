<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Adding a new comment on: <%= movie.title %></h1>
        <div style="width: 40%; margin: 25px auto">
            <form method="POST" action="/movies/<%= movie._id %>/comments">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="comment" name="comment[text]"/>
                </div>
                <!-- name="comment[whatever]" creates nice req.body.comment prop! -->
                <div class="form-group">
                    <button class="btn btn-lrg btn-primary btn-block">Submit Comment</button>
                </div>
                <!--submitting a form uses the form method & action, itc: POST /movies-->
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>
